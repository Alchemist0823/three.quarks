{
  "name": "root",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=quarks.core --workspace=three.quarks --workspace=quarks.nodes --workspace=quarks.playground --workspace=quarks.examples",
    "dev": "npm run dev --workspaces",
    "test": "npm run test  --workspaces",
    "examples": "npm run dev --workspace=quarks.examples",
    "playground": "npm run dev --workspace=quarks.playground",
    "prettier": "npm run prettier --workspaces",
    "publish": "npm publish --workspace=quarks.core --workspace=three.quarks",
    "yalc:publish": "npm run yalc:publish --workspace=quarks.core --workspace=three.quarks",
    "docs": "cross-env NODE_OPTIONS='--experimental-require-module' typedoc",
    "docs-dev": "http-server ./docs -c-1 -p 8002"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/plugin-transform-class-properties": "^7.28.6",
    "@babel/plugin-transform-object-rest-spread": "^7.28.6",
    "@babel/plugin-transform-typescript": "^7.28.6",
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-typescript": "^7.28.5",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "cpx": "^1.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.19.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "gh-pages": "^6.3.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lerna": "^9.0.3",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "rollup": "^4.57.1",
    "ts-jest": "^29.4.6",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.16",
    "typedoc-google-tag-manager-plugin": "^1.0.5",
    "typedoc-plugin-markdown": "^4.9.0",
    "typedoc-plugin-script-inject": "^2.0.0",
    "typescript": "^5.9.3",
    "yalc": "^1.0.0-pre.53"
  },
  "overrides": {
    "typedoc-google-tag-manager-plugin": {
      "typedoc": "$typedoc"
    },
    "typedoc-plugin-script-inject": {
      "typedoc": "$typedoc"
    }
  },
  "lint-staged": {
    "**/*.ts": "prettier --write --ignore-unknown"
  }
}
